@model FransfordSystem.Models.ReporteExamen
@{
    ViewData["Title"] = "Create";
    var examenes = ViewBag.clientesDeLista as List<SelectListItem>;
}
<center> <h1>Crear Nuevo Reporte</h1> </center>

<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-header d-flex">
            <div class="mr-auto p-2">Datos del Reporte</div>
            <div class="p-2"><a href="#" class="btn btn-success">Registrar Nuevo Cliente</a></div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="idCliente" class="control-label"></label>  
                <select asp-for="idCliente" class="form-control" asp-items="@(new SelectList(@ViewBag.clienteDeLista, "IdCliente", "nombreCliente"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="fechaReporte" class="control-label"></label>
                <input asp-for="fechaReporte" class="form-control" />
                <span asp-validation-for="fechaReporte" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-12 bg-light text-right">
        <button type="button" class="btn btn-success">Agregar Examen</button>
    </div>   

    <div class="card">
        <div class="card-header">
            Datos del Examen
        </div>

        <div class="card-body">
            <div class="form-group">
                <label class="control-label">Examen</label>  
                <select class="form-control" asp-items="@(new SelectList(@ViewBag.examenDeLista, "idExamen", "nombreExamen"))"></select>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
         </div>
    </div>

</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
