@model FransfordSystem.Models.ReporteExamen

@{
    ViewData["Title"] = "Edit";
}
<div align="center">
    <h1>Editar Reporte</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdReporteExamen" />
            <div class="form-group">
                <label asp-for="fechaReporte" class="control-label"></label>
                <input asp-for="fechaReporte" class="form-control" />
                <span asp-validation-for="fechaReporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idCliente" class="control-label"></label>
                <input asp-for="idCliente" class="form-control" />
                <span asp-validation-for="idCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
