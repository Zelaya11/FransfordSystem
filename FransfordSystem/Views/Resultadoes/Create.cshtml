@model FransfordSystem.Models.Resultado

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Resultado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>                      
            <div class="form-group">
                <label asp-for="idReporteExamen" class="control-label"></label>
                <input asp-for="idReporteExamen" class="form-control" />
                <span asp-validation-for="idReporteExamen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Seleccionar Examen</label>
                <select  class="form-control" asp-items="@(new SelectList(@ViewBag.examenDeLista, "idExamen", "nombreExamen"))"></select>
            </div>


            <div class="form-group">
                <label asp-for="idDescripcion" class="control-label"></label>
                <input asp-for="idDescripcion" class="form-control" />
                <span asp-validation-for="idDescripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resultadoExamen" class="control-label"></label>
                <input asp-for="resultadoExamen" class="form-control" />
                <span asp-validation-for="resultadoExamen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
