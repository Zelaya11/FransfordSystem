@model FransfordSystem.ViewModels.RegistrarUsuarioViewModel
@{
    ViewData["Title"] = "Registrar Trabajadores";
}


<h1>Registrar Usuario</h1>

<div class="row">
    <div class="col-md-4">
        <form action="registarUsuarioPost" method="post">
            <h2>Crear Nuevo Usuario</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="nombre" class="form-control" placeholder="Nombres Trabajador" aria-required="true" />
            </div>
            <div class="form-floating">
                <input asp-for="apellido" class="form-control" placeholder="Apellidos Trabajador" aria-required="true" />
            </div>
            <div class="form-floating">
                <input asp-for="fechaNac" class="form-control" placeholder="Fecha Nacimiento" aria-required="true" />
            </div>
            <div class="form-floating">
                <input asp-for="genero" class="form-control" autocomplete="Genero" aria-required="true" />
            </div>
            <div class="form-floating">
                <input asp-for="dui" class="form-control" autocomplete="Dui" aria-required="true" />
            </div>
            <div class="form-floating">
                <input asp-for="cuentaBancaria" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <div class="form-floating">
                <input asp-for="correo" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <div class="form-floating">
                <input asp-for="nombreUsuario" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <div class="form-floating">
                <input asp-for="contra" class="form-control" autocomplete="new-password" aria-required="true" />
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">     
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}