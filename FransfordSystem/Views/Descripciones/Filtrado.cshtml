@model FransfordSystem.Models.Descripcion

@{
    ViewData["Title"] = "Index";
}

<h1>Descripciones</h1>

<p>
    <a asp-action="Create">Añadir descripción</a>
</p>
<table class="table" id="Tabla">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.descripcionExamen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorMinimo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorMaximo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Descripcion Descripcion in ViewBag.Descripciones) {
        <tr>
                      

            <td>@Descripcion.descripcionExamen</td>
            <td>@Descripcion.valorMinimo</td>
            <td>@Descripcion.valorMaximo</td>
            <td>
                <a asp-action="Edit" asp-route-id="@Descripcion.idDescripcion">Editar</a> |
                <a asp-action="Details" asp-route-id="@Descripcion.idDescripcion">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@Descripcion.idDescripcion">Borrar</a>
            </td>
            </tr>
    
        }
    </tbody>
</table>
