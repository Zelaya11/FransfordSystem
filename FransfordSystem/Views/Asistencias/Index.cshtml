<table class="table table-hover">
    <thead>
        <tr align="center">
            <th>
                @Html.DisplayNameFor(model => model.idUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaSalida)
            </th>
            <th>
                <a>Opciones</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr align="center">
            <td class="cliente">
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaSalida)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.idAsistencia" class="btn btn-info" role="button" aria-pressed="true"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                </svg> Ver</a>

                 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


                <a asp-action="Delete" asp-route-id="@item.idAsistencia" class="btn btn-danger" role="button" aria-pressed="true"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                </svg> Eliminar</a>
            </td>
        </tr>
}
    </tbody>



    
</table>

 <script>
            function nombre() {
                var list2 = [];
                var list2 = @Html.Raw(JsonConvert.SerializeObject(ViewBag.usuarioDeLista));
                let td = document.getElementsByClassName("cliente");


                for (let i = 0;i < td.length;i++){
                    for (let a = 0;a < list2.length; a++) {
                        if (td[i].innerHTML.trim() == list2[a]['Id']) {
                            console.log(list2[a]['Id']);
                        td[i].innerHTML = list2[a]['nombreTrabajador']+ " " + list2[a]['apellidoTrabajador'];
                        }
                    }
                }
       

            }


        </script>



</body>
