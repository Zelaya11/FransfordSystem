            <th>
                @Html.DisplayNameFor(model => model.nombreTrabajador)
            </th>
            <th>
                @Html.DisplayFor(model => model.nombreTrabajador)
            </th>
        </tr>
        <tr> 
            <th>
                @Html.DisplayNameFor(model => model.apellidoTrabajador)
            </th>
            <th>
                @Html.DisplayFor(model => model.apellidoTrabajador)
            </th>
