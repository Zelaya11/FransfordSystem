        <tr> 
            <th>
                @Html.DisplayNameFor(model => model.fechaNacimiento)
            </th>
            <th>
                @Html.DisplayFor(model => model.fechaNacimiento)
            </th>
        </tr>
        <tr> 
            <th>
                @Html.DisplayNameFor(model => model.genero)
            </th>
            <th>
                @Html.DisplayFor(model => model.genero)
            </th>
        </tr>
        <tr> 
            <th>
                @Html.DisplayNameFor(model => model.dui)
            </th>
            <th>
                @Html.DisplayFor(model => model.dui)
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayFor(model => model.correo)
            </th>
        </tr>
        <tr> 
            <th>
                @Html.DisplayNameFor(model => model.cuentaBancaria)
            </th>
            <th>
                @Html.DisplayFor(model => model.cuentaBancaria)
            </th>
        </tr>
    </table>
</div>
<div>
    <a asp-action="Editar" asp-route-id="@Model?.IdTrabajador">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
