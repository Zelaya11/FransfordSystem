@model FransfordSystem.Models.Factura

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Factura</h1>

<h3>¿Esta seguro que desea eliminar esta factura?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fechaFactura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaFactura)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.totalFactura)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.totalFactura)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idCliente)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdFactura" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Regresar</a>
    </form>
</div>
