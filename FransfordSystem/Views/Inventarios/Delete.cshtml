@model FransfordSystem.Models.Inventario

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Esta seguro que desea eliminar?</h3>
<div>
    <h4>Inventario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.producto.nombreProducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.fechaVencimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fechaVencimiento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.entrada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.entrada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.salida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.salida)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idInventario" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Regresar</a>
    </form>
</div>
